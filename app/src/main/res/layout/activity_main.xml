<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="stm.com.embassy.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp"
        android:weightSum="1">


        <com.facebook.login.widget.LoginButton
            android:text="Button"
            android:layout_width="122dp"
            android:layout_height="37dp"
            android:id="@+id/loginButton" />

        <TextView
            android:text=" "
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:id="@+id/nameAndSurname"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Large.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/ambasciata"
            android:onClick="onInfoClick"
            android:text="@string/ambasciata_main_button" />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Large.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/consolati"
            android:onClick="onConsolateClick"
            android:text="@string/consolati_main_button" />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Large.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/fireworks"
            android:onClick="onEventClick"
            android:text="@string/eventi_main_button" />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Large.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/fireworks"
            android:onClick="onMessaggiClick"
            android:text="MESSAGGI" />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Large.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/servizi"
            android:onClick="onServiziClick"
            android:text="SERVIZI" />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
