<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="stm.com.embassy.activity.InfoActivity"
    tools:showIn="@layout/activity_info">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="@string/info_label"
        android:drawableLeft="@drawable/stemma"
        android:drawablePadding="5dp"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Via Asmara 7, Roma\nTel. (+39) 06 8603 060-8\nFax (+39) 06 8621 8204\nat.roma@tiscali.it\nOrario di apertura \ndalle ore 09,00 alle ore 18,00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:id="@+id/textView7" />


    <TextView
        android:text="Moez Sinaoui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ambassador_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:id="@+id/textView9"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView" />

    <TextView
        android:text="Ambasciatore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ambassador_label"
        android:paddingTop="10dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Moez Sinaoui è un avvocato tunisino, un diplomatico di carriera. Attualmente ambasciatore per la Tunisia in Italia, ha ricoperto la carica di Direttore della Comunicazione e Public Affairs presso il Segretariato dell'Unione per il Mediterraneo. In precedenza, Moez Sinaoui era responsabile della comunicazione con il primo ministro tunisino, e membro del Consiglio dei Ministri nel 2011. Ha inoltre ricoperto vari incarichi diplomatici ed è stato Rappresentante Permanente della Tunisia presso le Nazioni Unite a Roma (FAO, PAM e IFAD). Moez Sinaoui ha conseguito la laurea di diritto internazionale presso l'Università di Aix-en-Provence ed un Master in Diritto Europeo presso l'Università di Tunisi. Parla arabo, francese, inglese e italiano. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:paddingTop="10dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/moez_sinoui"
        android:id="@+id/imageView"
        android:layout_above="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
